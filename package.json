{
  "name": "compatbuddy",
  "displayName": "CompatBuddy",
  "description": "AI-powered VS Code extension that flags risky web features and suggests safer alternatives using Baseline data",
  "version": "0.0.1",
  "publisher": "fahamgeer-mahesar",
  "icon": "CompatBuddy.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/fahamgeer177/CompatBuddy.git"
  },
  "bugs": {
    "url": "https://github.com/fahamgeer177/CompatBuddy/issues"
  },
  "homepage": "https://github.com/fahamgeer177/CompatBuddy#readme",
  "license": "MIT",
  "keywords": ["web", "compatibility", "css", "javascript", "browser-support", "fallback", "polyfill"],
  "engines": {
    "vscode": "^1.104.0"
  },
  "categories": [
    "Linters", "Other"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "compatbuddy.scan",
        "title": "Scan for Compatibility Issues",
        "category": "CompatBuddy"
      },
      {
        "command": "compatbuddy.insertSnippet",
        "title": "Insert Fallback Snippet",
        "category": "CompatBuddy"
      }
    ],
    "configuration": {
      "title": "CompatBuddy",
      "properties": {
        "compatbuddy.backendUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Backend API URL for compatibility checks"
        },
        "compatbuddy.autoScan": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan files for compatibility issues"
        },
        "compatbuddy.minimumSupportThreshold": {
          "type": "number",
          "default": 85,
          "description": "Minimum browser support percentage to avoid warnings",
          "minimum": 0,
          "maximum": 100
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.104.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "typescript": "^5.9.3",
    "ts-loader": "^9.5.4",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
